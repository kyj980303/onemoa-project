<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bitcamp.onemoaproject.dao.FindChatDao">

    <resultMap id="message" type="findChat">
        <id column="msgno" property="no"/>
        <id column="mno" property="buyer"/>
        <id column="mno2" property="seller"/>
        <result column="cont" property="content"/>
    </resultMap>

    <insert id="add" parameterType="findChat"
            useGeneratedKeys="true" keyColumn="msgno" keyProperty="no">
        insert into message(mno,mno2)
        values (#{buyer}, #{product.writer.no})
    </insert>
</mapper>